public class Main {
    public static void main(String[] args){
    int [] mass = {0, 1, 1, 0, 1, 0};
      for (int i = 0; i < mass.length; i++){
        System.out.println ("mass [" + i + "] = " + mass[i]);
        if (mass[i] ==0) mass [i] = 1;
        else mass [i] = 0;
        System.out.println ("revised mass [" + i + "] = " + mass[i]);
      }
    }
}
